<!-- Modal for Profile Picture Upload -->
<div id="uploadModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Upload Profile Picture</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <!-- Your form for uploading the profile picture can go here -->
                <form id="profilePictureForm" enctype="multipart/form-data" method="post" asp-controller="User" asp-action="Profile">
                    <div class="form-group">
                        <label for="profilePicture">Select a file:</label>
                        <input type="file" class="form-control" id="profilePicture" name="profilePicture">
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

