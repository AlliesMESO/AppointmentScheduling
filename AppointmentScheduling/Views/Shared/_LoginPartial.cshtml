@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduling.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form mwthod="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">

        <ul class="nav navbar-nav">

            <li class="text-white nav-link">

                Hello, @User.Identity.Name!

            </li>

            <li>

                <a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                    Log off

                    <i class="fa-thin fa-solar-panel custom-size-icon" style="margin-left: 30px; vertical-align: middle;">

                    </i>
                </a>

            </li>

        </ul>

    </form>
}
else
{
    <ul class="nav navbar-nav">

        <li class="nav-item">

            @*<li>@Html.ActionLink("Sign Up", "Register", "Account", routeValues: null, htmlAttributes: new { id= "registerLink"})</li>*@

            <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">
                <i class="fa-thin fa-atom-simple fa-spin fa-2xs"></i> Register
            </a>

        </li>


        @*<li>@Html.ActionLink("Sign In", "Login", "Account", routeValues: null, htmlAttributes: new { id= "LoginLink"})</li>*@

        <li class="nav-item">

            <a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login">
                <i class="fa-light fa-rocket-launch fa-shake"></i> Sign In
            </a>

        </li>

    </ul>
}